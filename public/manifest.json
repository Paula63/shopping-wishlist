{
  "manifest_version": 2,
  "name": "Shopping Wishlist",
  "version": "1.3.14",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "css": ["stylesheet/content.css"]
    }
  ],
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs", 
    "activeTab", 
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' https://maxcdn.bootstrapcdn.com https://gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'",
  "browser_action": {
    "default_icon": "images/shopping-bag.png",
    "default_popup": "interface/popup.html",
    "default_title": "Shopping Assistant"
  }
}
